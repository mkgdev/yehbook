<% include  ../partials/header %>


<div class="container-fluid book-div">
    
<div class="container container-book">

<div class="jumbotron jumbotron-book" >
    <h1 class="caption">Books</h1>
    
    <p>“Books are the ultimate Dumpees: put them down and they’ll wait for you forever; pay attention to them and they always love you back.” 
        <br>
<!--
        <br>
             <span>― John Green</span></p>
-->
    

    <a href="/books/request/new" class="btn btn-danger btn-transparent btn-lg request-btn" >Request Book</a>
    
    </div>    
</div>

</div>
    
    
    <div class="container book-container">
    <div class="row">
    
    <div class="col-md-3">
     
    
        <h2>Categories</h2>

    <div class = "row">
        
        <div class="col-md-12">
        <iframe name='useless' style='display:none'></iframe>
         <form class="radio-form" target='useless'>
            
       <div class="radio">
  <label class="radiobutton">
    <input type="radio" name="optionsRadios" id="optionsRadios1" value="New" >
    New 
  </label>
</div>
<div class="radio">
  <label class="radiobutton">
    <input type="radio" name="optionsRadios" id="optionsRadios2" value="Second hand ">
   Second hand
  </label>
</div>
        
    <div class="radio">
  <label class="radiobutton">
    <input type="radio" name="optionsRadios" id="optionsRadios2" value="All" checked>
    All
  </label>
</div>     

    </form>            
        </div>
        
        
        </div>
    </div>
    
    <div class="col-md-9 book-grid">


        <div class="row" style="display:flex; flex-wrap: wrap;">
                
                <% booksNAME.forEach(function(x){ %>
   
                     <div class="col-md-4 col-sm-6 col-xs-12">                                
                       <div class="thumbnail thumbnail-book">
                         <img src=" <%= x.image %>">
                            

                            <div class="caption caption-book">
                                    
                                     <%=   x.name   %>
                                     <p> by  <strong> <%=  x.writer  %> </strong> </p>

                            </div>
                            
                                  <a href="/books/<%= x._id %>" class=" btn btn-primary"><span class="glyphicon glyphicon-info-sign"></span> More Info</a>
                           
                           

                       </div>
                         
                         <hr class="book-divider">
                    </div>
            
                         <% }); %>

        </div>


 </div>
    </div>
        </div>

 <% include  ../partials/footer %>