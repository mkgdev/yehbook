<% include  ../partials/header %>

<div class="container">
    <div class="row">
<h1 style="text-align: center"> Edit details of       <strong>  <%= book.name%>   </strong>          </h1>
        <div style="width: 30%; margin: 30px auto;">
 <form action="/books/<%= book._id %>?_method=PUT" method = "POST">
                        <div class="form-group">
                              
                                <input class="form-control" type = "text" name = "book[name]" value="<%= book.name%>"  > 
                        </div>

                        <div class="form-group">
                   
                                <input class="form-control" type = "text" name = "book[writer]" value="<%= book.writer %>"> 
                        </div>

                        <div class="form-group">
                                <input class="form-control" type = "text" name = "book[image]" value="<%= book.image %>">
                        </div>
                      
                        <div class="form-group">
                                <input class="form-control" type = "text" name = "book[condition]" value="<%= book.condition %>">
                        </div>
                      
  
                        <div class="form-group">
                               <textarea class="form-control" type="text" name = "book[description]" ><%= book.description %></textarea>


                        </div>
  
  

                        <div class="form-group">
                                <button class="btn btn-default btn-lg showcase-btn btn-block"> Submit! </button>
                        </div>
 
     
 </form>
   <a href="/books">Go back</a>
       </div>
    </div>
</div>

 <% include  ../partials/footer %>
